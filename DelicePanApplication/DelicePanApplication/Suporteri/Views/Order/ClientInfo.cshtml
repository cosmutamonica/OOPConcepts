@model Suporteri.Models.User
<link href="~/Style/style.css" rel="stylesheet" />
@{
    ViewBag.Title = "ClientInfo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyC7385E3sjwvf87AzDJGakWKk8iRI1SX1Y&callback=myMap"></script>
<script type="text/javascript">
    function myMap() {
        var myCenter = new google.maps.LatLng(47.22973968433303, 24.775307178497314);
        var mapCanvas = document.getElementById("map");
        var mapOptions = { center: myCenter, zoom: 3 };
        var map = new google.maps.Map(mapCanvas, mapOptions);
        var marker = new google.maps.Marker({ position: myCenter });
        marker.setMap(map);

        var infowindow = new google.maps.InfoWindow();
        infowindow.open(map, marker);

    }
</script>
<br /><br />
<h2>Detalii client</h2>
<br />
<div style="margin-left:5%">
    <div class="form-horizontal">
        <div class="panel panel-default marginPanel text-center" style="width:95%">
            <div class="panel-heading">
            @Html.DisplayFor(model => model.FirstName)
            @Html.DisplayFor(model => model.FirstName)<br />
            @Html.DisplayFor(model => model.Email)
            </div>
            <div class="panel-body">
                <div id="map"></div>
            </div>
            <div class="panel-footer">
               @Html.DisplayFor(model => model.Address)<br />
               @Html.DisplayFor(model => model.Type) 
            </div>
        </div>
    </div>
</div>

