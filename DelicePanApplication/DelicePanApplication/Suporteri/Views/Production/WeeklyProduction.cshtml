@model IEnumerable<Suporteri.Models.ProductionVModel>

@{
    ViewBag.Title = "WeeklyProduction";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Style/style.css" rel="stylesheet" />
<br /><br />
<h2>Productia de saptamana asta</h2>
<br />
<div class="panel panel-default marginPanel text-center">
    @if (Model.Count() > 0)
    {
        <table class="table table-striped">
            <tr>
                <th class="textAlignCenter">
                    @Html.ActionLink(Html.DisplayNameFor(model => model.ProductName).ToString(), "WeeklyProduction", new { orderBy = Html.DisplayNameFor(model => model.ProductName).ToString(), order = ViewBag.Order })
                </th>
                <th class="textAlignCenter">
                    @Html.ActionLink(Html.DisplayNameFor(model => model.Quantity).ToString(), "WeeklyProduction", new { orderBy = Html.DisplayNameFor(model => model.Quantity).ToString(), order = ViewBag.Order })
                </th>
                <th class="textAlignCenter">
                    @Html.ActionLink(Html.DisplayNameFor(model => model.Date).ToString(), "WeeklyProduction", new { orderBy = Html.DisplayNameFor(model => model.Date).ToString(), order = ViewBag.Order })
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        <h4>Nu sunt produse in productia de azi!</h4>
    }
</div>
<p>
    <input type="button" id="add" name="btnAdd" value="Adauga" onclick="location.href='@Url.Action("AddProduction", "Production")'" class="btn btn-default" />
</p>